<Window x:Class="PlantCad.UI.MainUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlantCad.UI" xmlns:System="clr-namespace:System;assembly=mscorlib" x:Name="Main" MinWidth="560" MinHeight="420" 
             Width="549" Height="404" Background="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}"
             BorderThickness="1">
    <Grid>
        <TreeView Margin="10,35,265,10"/>
        <Menu x:Name="MainMenu" Height="20" Margin="10,10,10,0" VerticalAlignment="Top">
            <MenuItem Icon="{DynamicResource {x:Static SystemParameters.BorderWidthKey}}">
                <MenuItem HorizontalAlignment="Left" Width="30" Height="45" Margin="1,0,-1,0" Icon="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" Click="Save_Click"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
